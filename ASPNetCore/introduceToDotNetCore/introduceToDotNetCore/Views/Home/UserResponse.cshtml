
@model User

    <form action="/Home/UserResponse" method="post">
        <div>
            <input asp-for="Name" class="form-control" placeholder="Adınız"  />
        <span asp-validation-for="Name" class="form-control alert alert-danger"></span>
        </div>
        <div>
        <input asp-for="LastName" placeholder="Soyadınız" class="form-control" />
        <span asp-validation-for="LastName" class="form-control alert alert-danger"></span>


        </div>
        <div>
        <input asp-for="Email" placeholder="Eposta Adresi" class="form-control" />
        <span asp-validation-for="Email" class="form-control alert alert-danger"></span>

        </div>
        <div>
        <textarea asp-for="Comment" class="form-control"></textarea>

        </div>
        <div>
        <input asp-for="ResponseDate" class="form-control" />
        </div>
        <button type="submit">
            Gönder
        </button>
    </form>
